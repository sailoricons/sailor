{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["import", "prettier"],
  "rules": {
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-param-reassign": "off",
    "no-shadow": "off",
    "no-use-before-define": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ]
  }
}
